<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:id="@+id/cLayoutMain" android:background="@color/colorPrimary">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" app:layout_constraintHorizontal_bias="0.498" android:id="@+id/nombreAplicacion"
            android:layout_marginTop="30dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:textColor="@color/rojoOscuro"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonNuevaPartida" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/nombreAplicacion" app:layout_constraintHorizontal_bias="0.498"
            android:text="@string/nuevaPartida" android:background="@color/rojoNormal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"/>
    <Button
            android:text="@string/cargarPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonCargarPartida" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/botonNuevaPartida"
            app:layout_constraintHorizontal_bias="0.498" android:background="@color/rojoNormal"
            android:textColor="@color/colorPrimaryDark" android:padding="10dp"/>


</android.support.constraint.ConstraintLayout>