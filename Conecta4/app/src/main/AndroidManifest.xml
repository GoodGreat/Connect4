<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.uam.eps.dadm.conecta4">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_customizado"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_customizado"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.ERSettingsActivity"
                android:label="@string/title_activity_ersettings">
        </activity>
        <activity
                android:name=".activities.LoginActivity"
                android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.RoundListActivity">
        </activity>
        <activity android:name=".activities.RoundActivity">
        </activity>
        <activity android:name=".activities.MainActivity">
        </activity>
    </application>

</manifest>